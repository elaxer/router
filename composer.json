{
    "name": "elaxer/router",
    "description": "Simple and fast HTTP request router",
    "require-dev": {
        "phpunit/phpunit": "^9.1",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Elaxer",
            "email": "elaxerdev@gmail.com"
        }
    ],
    "require": {
        "php": "7.4.*",
        "ext-mbstring": "*"
    },
    "autoload": {
        "psr-4": {
            "Elaxer\\Router\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Elaxer\\Router\\Tests\\": "tests"
        }
    },
    "scripts": {
        "tests": "phpunit",
        "lint": "phpcs",
        "fix": "phpcbf"
    }
}
